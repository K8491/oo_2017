<Window x:Class="playerWPF.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:playerWPF"
        mc:Ignorable="d"
        Title="K8491's player Game" Height="422" Width="642" ResizeMode="NoResize" >
<Grid Background="Black">
        <Image Source="player.png" Width="600" Height="370" Margin="30"></Image>
        <Canvas Name="paintCanvas" HorizontalAlignment="Stretch" MaxHeight="422" MaxWidth="642" >
        <TextBlock x:Name="txtMessage" FontFamily="tahoma" FontSize="33" Foreground="AntiqueWhite" Canvas.Left="10" Canvas.Top="10" Text="Let's play!" ></TextBlock>
          
    </Canvas>

