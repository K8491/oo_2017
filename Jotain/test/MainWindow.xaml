<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid RenderTransformOrigin="0.494,0.48">
        <TextBox x:Name="playerpos" Text="{Binding Path=position, Mode=OneWay}" HorizontalAlignment="Left" Height="49" Margin="34,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
        <StackPanel x:Name="stackp" HorizontalAlignment="Left" Height="267" Margin="185,10,0,0" VerticalAlignment="Top" Width="312" MouseDown="stackp_MouseDown_1" MouseMove="stackp_MouseMove" Background="#FF997676"/>
        <Label x:Name="label" Content="Ammukset 10/10" HorizontalAlignment="Left" Margin="34,160,0,0" VerticalAlignment="Top" Height="32" Width="125"/>
        <Button x:Name="lataaAmmukset" Content="Lataa" HorizontalAlignment="Left" Margin="34,228,0,0" VerticalAlignment="Top" Width="75" Click="lataaAmmukset_Click"/>
        <ProgressBar x:Name="lataus" HorizontalAlignment="Left" Height="26" Margin="34,197,0,0" VerticalAlignment="Top" Width="109" Maximum="10" Value="10" />

    </Grid>
</Window>
